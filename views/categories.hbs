<div class="row">
    <div class="col-md-12">
        <h1>Categories</h1>
        <div class="text-center">
            <a href="/categories/add" class="btn btn-outline-danger">Add Category</a>
        </div>
        <hr />
    </div>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th></th> <!-- For the remove button -->
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td><a href="/posts?category={{id}}">{{id}}</a></td>
                <td><a href="/posts?category={{id}}">{{category}}</a></td>
                <td><a href="/categories/delete/{{id}}" class="btn btn-primary btn-danger">Remove</a></td> <!-- remove button -->
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
    
</div>