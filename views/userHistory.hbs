<h2 style="color: #f84141;">{{session.user.userName}} ({{session.user.email}}) History</h2>
<hr>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
        </tr>
    </thead>
    <tbody>
        {{#each session.user.loginHistory}}
        <tr>
            <td>{{this.dateTime}}</td>
            <td>{{this.userAgent}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
