<h1 style="color: #f84141;">Log In</h1>
<hr>

{{#if errorMessage}}
<div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
{{/if}}

<form action="/login" method="POST">
    <div class="form-container">

        <div class="form-floating mb-3">
            <input name="userName" id="userName" class="form-control border border-danger" placeholder="Username" required autofocus></input>
            <label for="userName" class="form-label">User Name</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" name="password" id="password" class="form-control border border-danger" placeholder="Password" required></input>
            <label for="password" class="form-label">Password</label>
        </div>

        <button type="submit" class="btn btn-primary mt-4 btn-lg btn-danger">Login</button>
    </div>
</form>