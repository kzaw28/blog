<div class="col-md-12">
        <h1>Posts</h1>
        <hr />
</div>

{{#unless posts}}
<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
{{/unless}}


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td><a href="/posts?category={{category}}">{{category}}</a></td>
                <td>{{published}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

