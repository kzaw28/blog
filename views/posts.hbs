<div class="col-md-12">
        <h1>Posts</h1>
        <div class="text-center">
            <a href="/posts/add" class="btn btn-outline-danger">Add Post</a>
        </div>
        <hr />
</div>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
                <th></th> <!-- For the remove button -->
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{#formatDate postDate}}{{/formatDate}}</td>
                <td><a href="/posts?category={{category}}">{{category}}</a></td>
                <td>{{published}}</td>
                <td><a href="/posts/delete/{{id}}" class="btn btn-primary btn-danger">Remove</a></td> <!-- remove button -->
            </tr>
            {{/each}}
        </tbody>
    </table>

    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>

